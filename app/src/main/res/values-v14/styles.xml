<resources>

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <!-- API 14 theme customizations can go here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/twitter_primary</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_action_back_white</item>
        <!-- Support library compatibility -->
        <item name="background">@color/twitter_primary</item>
        <item name="homeAsUpIndicator">@drawable/ic_action_back_white</item>
    </style>

    <style name="ComposeTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowContentOverlay">@null</item>
        <!-- API 14 theme customizations can go here. -->
        <item name="android:actionBarStyle">@style/ComposeActionBar</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_action_back_white</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/ComposeActionBar</item>
        <item name="homeAsUpIndicator">@drawable/ic_action_back_twitter</item>
    </style>

    <!-- ActionBar styles -->
    <style name="ComposeActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@color/white</item>
        <!-- Support library compatibility -->
        <item name="background">@color/white</item>
    </style>
</resources>
